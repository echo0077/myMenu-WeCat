/* pages/index/meals/meals.wxss */
.title {
  color: #999;
  display: block;
  margin: 0 0 15px 15px;
}
.mealsName-box{
  display: flex;
}
.mealsNametext{
  width: 90px;
  text-align: center;
  margin-bottom: 20px;
}
.mealsNameactive{
  width: 90px;
  text-align: center;
  font-size: 20px;
  color: #fe9b95;
  margin-bottom: 20px;
}
.flex-meals-img{
  display: flex;
  height: 300px;
}
.scroll-box{
  white-space: nowrap;
  display: flex;
  padding-bottom: 100px;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 330px;
}
.img-item{
  width: 100%;
  height: auto;
}
.swiper-text-box{
  width: 47%;
  position: relative;
}
.swiper-text-box1{
  position: absolute;
  bottom: 0px;
}
.text-name{
  position: absolute;
  bottom: 25px;
  font-size: 18px;
  color: #333;
  font-weight: 900;
}
.text-msg{
  display: block;
  color: #fe9b95;
  font-size: 14px;
  background-color: #fff2f2;
}
.meals-carousel-box{
  height: 160px;
}
.mealsCarousel-item{
  width: 98%;
  height: auto;
  margin: auto;
  border-radius: 2% 2%;
}